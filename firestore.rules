
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow users to manage their own saved ideas
    // "read" covers get and list operations.
    match /users/{userId}/ideiasSalvas/{ideiaId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /users/{userId}/ideiasSalvas {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own scheduled content
    match /users/{userId}/conteudoAgendado/{conteudoId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    // Allow users to list their own scheduled content
    match /users/{userId}/conteudoAgendado {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own daily usage stats
    match /users/{userId}/dailyUsage/{usageId} {
        allow read, create, update: if request.auth.uid == userId;
    }

    // Allow users to manage their own video analyses
    match /users/{userId}/analisesVideo/{analiseId} {
      allow read, create: if request.auth.uid == userId;
    }
     match /users/{userId}/analisesVideo {
      allow list: if request.auth.uid == userId;
    }

    // Protect all other data to only be accessible by authenticated users
    match /metrica/{metricaId} {
      allow read, write: if request.auth != null;
    }
    match /dadosGrafico/{pontoDadosGraficoId} {
      allow read, write: if request.auth != null;
    }
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow users to read and write their own profile picture in a dedicated folder.
    // The {fileName} wildcard allows for any file name.
    match /profile-pictures/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload, read, and delete their own videos for analysis.
    match /video-reviews/{userId}/{videoId}/{fileName} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Allow authenticated users to write to a test directory
    match /test-uploads/{fileName} {
      allow write: if request.auth != null;
    }
  }
}

    