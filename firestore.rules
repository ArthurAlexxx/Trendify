rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Função que valida o 'role' de admin a partir do Custom Claim no token de autenticação.
    function isAdmin() {
      return request.auth != null && request.auth.token.role == "admin";
    }

    // --- USERS COLLECTION ---
    match /users/{userId} {
      // O próprio usuário pode criar, ler e escrever no seu próprio perfil.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Um admin pode ler o perfil de qualquer usuário.
      allow read: if isAdmin();
    }

    // Apenas um admin pode listar a coleção de usuários inteira.
    match /users/{document=**} {
        allow list: if isAdmin();
    }
    
    // --- GENERAL SUBCOLLECTION RULES ---
    // Usuários podem gerenciar suas próprias subcoleções (ideiasSalvas, conteudoAgendado, etc.)
    match /users/{userId}/{subcollection=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- ROTEIRO COLLECTION RULES ---
    // Qualquer usuário autenticado pode ler e escrever na coleção de roteiro.
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
