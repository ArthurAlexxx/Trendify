rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role from the user's document
    function isAdmin() {
      // Allow reading the user's own role field to check for admin status
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- USERS COLLECTION RULES ---
    match /users/{userId} {
      // A user can read and write to their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // An admin can read any user's profile.
      allow read: if isAdmin();
    }

    // An admin can list the entire users collection.
    // NOTE: This rule is permissive but relies on client-side checks to prevent
    // non-admins from ever attempting this query. The AdminLayout enforces this.
    match /users/{document=**} {
      allow list: if request.auth != null;
    }
    
    // --- GENERAL SUBCOLLECTION RULES ---
    // Users can manage their own subcollections (ideiasSalvas, conteudoAgendado, etc.)
    match /users/{userId}/{subcollection=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- ROTEIRO COLLECTION RULES ---
    // Any authenticated user can read and write to the roteiro collection.
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
