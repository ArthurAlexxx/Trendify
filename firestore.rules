
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow users to manage their own saved ideas
    match /users/{userId}/ideiasSalvas/{ideiaId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /users/{userId}/ideiasSalvas {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own scheduled content
    match /users/{userId}/conteudoAgendado/{conteudoId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /users/{userId}/conteudoAgendado {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own daily usage stats
    match /users/{userId}/dailyUsage/{usageId} {
        allow read, create, update: if request.auth.uid == userId;
    }

    // Allow users to manage their own video analyses
    match /users/{userId}/analisesVideo/{analiseId} {
      allow read, create: if request.auth.uid == userId;
    }
     match /users/{userId}/analisesVideo {
      allow list: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read/write the weekly plan.
    // Note: In a production app, you might want to restrict write access.
    match /roteiro/{planoId} {
      allow read, write: if request.auth != null;
    }
  }
}
