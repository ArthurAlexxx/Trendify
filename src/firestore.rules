
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user is an admin.
    // It reads the `role` field from the user's own profile document.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Admin-only rules ---

    // Admins can read the entire 'users' collection.
    match /users/{userId} {
      allow list: if isAdmin();
    }


    // --- User-specific rules ---

    match /users/{userId} {
      // Any authenticated user can create their own profile document.
      allow create: if request.auth.uid != null;
      
      // A user can read their own profile. An admin can read any profile.
      allow read: if request.auth.uid == userId || isAdmin();

      // A user can update their own profile, but they are NOT allowed to change their 'role'.
      // This prevents a user from making themselves an admin.
      allow update: if request.auth.uid == userId && !("role" in request.resource.data);
    }

    // Allow users to manage their own saved ideas subcollection
    match /users/{userId}/ideiasSalvas/{ideiaId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/ideiasSalvas {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own scheduled content subcollection
    match /users/{userId}/conteudoAgendado/{conteudoId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /users/{userId}/conteudoAgendado {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own daily usage stats subcollection
    match /users/{userId}/dailyUsage/{usageId} {
        allow read, create, update: if request.auth.uid == userId;
    }

    // Allow users to manage their own metric snapshots subcollection
    match /users/{userId}/metricSnapshots/{snapshotId} {
        allow read, create: if request.auth.uid == userId;
    }
     match /users/{userId}/metricSnapshots {
      allow list: if request.auth.uid == userId;
    }

    // Allow users to manage their own video analyses subcollection
    match /users/{userId}/analisesVideo/{analiseId} {
      allow read, create: if request.auth.uid == userId;
    }
     match /users/{userId}/analisesVideo {
      allow list: if request.auth.uid == userId;
    }

    // Allow any authenticated user to read/write from the weekly plan collection
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
