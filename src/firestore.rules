
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow create: if request.auth.uid != null;
      allow read: if request.auth.uid == userId || isAdmin();
      // Prevent users from elevating their own role
      allow update: if (request.auth.uid == userId && !("role" in request.resource.data)) || isAdmin();
    }
    
    // Allow any authenticated user to list users.
    // The front-end logic (useAdmin hook) is responsible for ensuring only admins can trigger this query.
    // This breaks the circular dependency where isAdmin() couldn't be called to authorize a list on the same collection.
    match /users {
      allow list: if request.auth != null;
    }

    match /users/{userId}/{subcollection=**} {
      allow read, write: if request.auth.uid == userId;
    }

    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
