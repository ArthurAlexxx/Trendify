
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins can read/write anywhere
    function isAdmin() {
      // Check for the 'admin' role on the user's own profile document
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- User-specific rules ---

    match /users/{userId} {
      // Users can create their own profile
      allow create: if request.auth.uid != null;
      // Users can read their own profile. Admins can read any profile.
      allow read: if request.auth.uid == userId || isAdmin();
      // Users can update their profile, but NOT their own role
      allow update: if request.auth.uid == userId && !("role" in request.resource.data);
    }

    // Allow users to manage their own saved ideas
    match /users/{userId}/ideiasSalvas/{ideiaId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /users/{userId}/ideiasSalvas {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own scheduled content
    match /users/{userId}/conteudoAgendado/{conteudoId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /users/{userId}/conteudoAgendado {
      allow list: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own daily usage stats
    match /users/{userId}/dailyUsage/{usageId} {
        allow read, create, update: if request.auth.uid == userId;
    }

    // Allow users to manage their own metric snapshots
    match /users/{userId}/metricSnapshots/{snapshotId} {
        allow read, create: if request.auth.uid == userId;
    }
    match /users/{userId}/metricSnapshots {
      allow list: if request.auth.uid == userId;
    }

    // Allow users to manage their own video analyses
    match /users/{userId}/analisesVideo/{analiseId} {
      allow read, create: if request.auth.uid == userId;
    }
     match /users/{userId}/analisesVideo {
      allow list: if request.auth.uid == userId;
    }

    // Allow authenticated users to read/write from the weekly plan
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
