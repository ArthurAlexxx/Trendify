rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS
    match /users/{userId} {

      // O usuário sempre pode ler e escrever seu próprio documento
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admin pode ler qualquer documento
      allow read: if request.auth != null && isAdmin();
    }

    // Listar toda a coleção de users (somente admin)
    match /users/{document=**} {
      allow list: if request.auth != null && isAdmin();
    }

    // Regra específica para a collectionGroup 'dailyUsage'
    // Esta regra permite que um admin leia os dados de uso de todos os usuários.
    // É crucial que a lógica no app (useAdmin hook) já tenha verificado se
    // o usuário é admin ANTES de executar esta query.
    match /{path=**}/dailyUsage/{usageId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Subcoleções do usuário (exceto dailyUsage, que tem regra própria acima)
    match /users/{userId}/{subcollection}/{docId} {
      // O usuário pode ler e escrever em suas próprias subcoleções
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Coleção roteiro (livre)
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }

    // Webhook Logs (somente admin para leitura, mas aberto para criação pelo webhook)
    match /webhookLogs/{logId} {
      allow read, list: if request.auth != null && isAdmin();
      allow create: if true;
    }
  }
}
