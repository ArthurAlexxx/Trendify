rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role in the auth token
    function isAdmin() {
      return request.auth != null && request.auth.token.role == "admin";
    }

    // --- USERS COLLECTION RULES ---
    match /users/{userId} {

      // A user can create their own profile
      allow create: if request.auth.uid == userId;

      // A user can read their own profile, or an admin can read any profile
      allow read: if request.auth.uid == userId || isAdmin();
      
      // An admin can update any profile.
      // A user can update their own profile, but cannot change their role.
      allow update: if (request.auth.uid == userId && !("role" in request.resource.data)) || isAdmin();
    }
    
    // Only an admin can list all users
    match /users/{document=**} {
        allow list: if isAdmin();
    }
    
    // --- GENERAL SUBCOLLECTION RULES ---
    // Users can manage their own subcollections (ideiasSalvas, conteudoAgendado, etc.)
    match /users/{userId}/{subcollection=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- ROTEIRO COLLECTION RULES ---
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }
  }
}
