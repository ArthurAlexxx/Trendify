rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // USERS
    match /users/{userId} {

      // O usuário sempre pode ler e escrever seu próprio documento
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Admin pode ler qualquer documento
      allow read: if request.auth != null && isAdmin();
    }

    // Listar toda a coleção de users (somente admin)
    match /users/{document=**} {
      allow list: if request.auth != null && isAdmin();
    }

    // Subcoleções do usuário
    match /users/{userId}/{subcollection=**} {
      // O usuário pode ler e escrever em suas próprias subcoleções
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin pode LER QUALQUER subcoleção de QUALQUER usuário.
      // Isso permite collectionGroup queries seguras para admins.
      allow read: if request.auth != null && isAdmin();
    }

    // Coleção roteiro (livre)
    match /roteiro/{itemRoteiroId} {
      allow read, write: if request.auth != null;
    }

    // Webhook Logs (somente admin para leitura, mas aberto para criação pelo webhook)
    match /webhookLogs/{logId} {
      allow read, list: if request.auth != null && isAdmin();
      allow create: if true;
    }
  }
}
